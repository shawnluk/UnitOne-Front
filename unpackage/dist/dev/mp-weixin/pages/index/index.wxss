
.topIndex {
		height: 200rpx;
		overflow: hidden;
}
.topImg{
		width:100%;
}
.nvgContent{
		display: flex;
		margin-top: 20rpx;
}
.nvgContent button {
		height: 100rpx;
		line-height: 100rpx;
}
.btn1{
		flex: 2;
		margin-left: 20rpx;
}
.btn2{
		flex: 4;
		height: 100rpx;
		margin: 0 10rpx;
}
.btn3{
		flex: 2;
		margin-right: 20rpx;
}
.section-head {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 18rpx 24rpx 10rpx;
}
.head-left {
		display: flex;
		align-items: center;
		gap: 14rpx;
}
.head-title {
		font-size: 40rpx;
		font-weight: 800;
		color: #111;
}
.head-max {
		font-size: 30rpx;
		font-weight: 900;
		color: #ff7a00;
		letter-spacing: 2rpx;
}
.head-right {
		display: flex;
		align-items: center;
		gap: 10rpx;
		padding: 10rpx 14rpx;
		border-radius: 18rpx;
		background: rgba(255, 255, 255, 0.7);
}
.filter-text {
		font-size: 28rpx;
		color: #888;
}
.filter-arrow {
		font-size: 26rpx;
		color: #bbb;
		margin-top: -2rpx;
}
